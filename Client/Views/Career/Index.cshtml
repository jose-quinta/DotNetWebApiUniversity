@model IEnumerable<Client.Models.Career>

@{
    ViewData["Title"] = "Careers List";
}

<div class="my-3 d-md-flex justify-content-evenly">
    <div class="flex-grow-1 display-6 text-sm-center text-primary opacity-75">Career List</div>
    <div class="text-end">
        <a asp-controller="Career" asp-action="Create" class="btn btn-info">New Career</a>
    </div>
</div>

@if (Model.Count() < 1) {
    <h2 class="display-6 mt-3 text-center text-danger">Not careers yet</h2>
} else {
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Code)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.School)</th>
                    <th>Mantainers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.School.Name</td>
                        <td>
                            <a asp-controller="Career" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="Career" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-secondary">Details</a>
                            <a asp-controller="Career" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}