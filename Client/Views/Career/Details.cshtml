@model Client.Models.Career

<div class="row col-12 col-sm-10 col-md-8 m-auto">
    <h1 class="text-center my-3 fs-4">Details Career</h1>
    <div class="form-group row my-1">
        <div class="col-4">
            <label asp-for="Name" class="form-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row my-1">
        <div class="col-4">
            <label asp-for="Code" class="form-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="Code" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row my-1">
        <div class="col-4">
            <label asp-for="School" class="form-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="School.Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row my-1">
        <div class="col-4">
            <label asp-for="School.Faculty" class="form-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="School.Faculty.Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row mt-3">
        <div class="form-group row col-12 col-sm-10 col-md-9 col-lg-8 mx-auto">
            <div class="col-6">
                <a asp-controller="Career" asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-primary form-control">Edit</a>
            </div>
            <div class="col-6">
                <a asp-controller="Career" asp-action="Index" class="btn btn-secondary form-control">Return to List</a>
            </div>
        </div>
    </div>
</div>