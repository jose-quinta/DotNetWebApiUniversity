@model Client.Models.School

<form asp-controller="School" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-header">
        <h1 class="modal-title fs-4" id="modalLabel">Create New School</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body overflow-y-auto">
        <div class="form-group row my-1">
            <div class="col-4">
                <label asp-for="Name" class="form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-1">
            <div class="col-4">
                <label asp-for="Code" class="form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Code" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-1">
            <div class="col-4">
                <label asp-for="Faculty" class="form-label"></label>
            </div>
            <div class="col-8">
                <select asp-for="FacultyId" class="select form-control"></select>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>