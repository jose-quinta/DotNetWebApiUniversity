@model Client.Models.School

@{
    var br = "\n";
    var cname = "Career: ";
}

<div class="modal-header">
    <h1 class="modal-title fs-4" id="modalLabel">Details School</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body overflow-y-auto">
    <div class="form-group row my-1">
        <div class="col-4">
            <label asp-for="Name" class="form-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row my-1">
        <div class="col-4">
            <label asp-for="Code" class="form-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="Code" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row my-1">
        <div class="col-4">
            <label asp-for="Faculty" class="form-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="Faculty.Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row my-1">
        <div class="col-12">
            <label asp-for="Careers" class="form-label"></label>
        </div>
        <div class="col-12">
            <textarea rows="5" readonly class="form-control">
                @foreach (var career in Model.Careers) {
                    @cname @career.Name @br
                }
            </textarea>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>